<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tj.pxdl.carlease.MenuAct.OrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/leftView"
            android:layout_width="11dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_btn_back" />

        <View
            android:id="@+id/leftBtn"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <RadioGroup
            android:id="@+id/rgpBot"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/border_btn_circle_theme"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtn01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_btn_theme_left"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="0dp"
                android:text="当前订单"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbtn02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/nocolor"
                android:button="@null"
                android:gravity="center"
                android:padding="0dp"
                android:text="历史订单"
                android:textColor="@color/bg_theme_color"
                android:textSize="14sp" />
        </RadioGroup>

    </RelativeLayout>

    <View
        android:id="@+id/topline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <FrameLayout
        android:id="@+id/contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/background_grey" />

</LinearLayout>
